{
  "name": "think-by-numbers-static",
  "version": "1.0.0",
  "description": "Think by Numbers - A better world through data",
  "scripts": {
    "start": "npm run clean && eleventy --serve",
    "serve": "eleventy --serve",
    "build": "npm run clean && eleventy && npm run search",
    "search": "npx pagefind --site _site --output-subdir _pagefind",
    "clean": "npx rimraf _site",
    "generate-images": "tsx scripts/generate-project-images.ts",
    "generate-images:file": "tsx scripts/generate-project-images.ts",
    "update-images": "tsx scripts/update-existing-images.ts",
    "fix-image-extensions": "tsx scripts/fix-image-extensions.ts",
    "generate-checklist": "tsx scripts/generate-post-checklist.ts",
    "score-posts": "tsx scripts/score-posts.ts",
    "prepare": "husky || true"
  },
  "keywords": [
    "eleventy",
    "blog",
    "podcast",
    "data-driven"
  ],
  "author": "Mike P. Sinn",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/genai": "^1.34.0",
    "dotenv": "^16.4.5",
    "glob": "^11.0.0",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@types/node": "^22.10.2",
    "husky": "^9.1.7",
    "luxon": "^3.4.4",
    "pagefind": "^1.0.4",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.5",
    "tsx": "^4.19.2"
  }
}
