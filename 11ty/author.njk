---
layout: base.njk
title: "Posts by Admin"
permalink: "/author/admin/"
---

<div class="container">
  <div class="main-content">
    <h1>Posts by Admin</h1>

    {%- set authorPosts = collections.all | reverse %}
    {%- set mdPosts = [] %}
    {%- for post in authorPosts %}
      {%- if post.data.title and post.inputPath.endsWith('.md') %}
        {%- set mdPosts = (mdPosts.push(post), mdPosts) %}
      {%- endif %}
    {%- endfor %}

    <p>{{ mdPosts.length }} posts</p>

    <div class="post-grid">
      {%- for post in mdPosts %}
      <article class="post-card">
        {%- if post.data.metadata.media.featuredImage %}
        <div class="post-image">
          <a href="{{ post.url }}">
            <img src="{{ post.data.metadata.media.featuredImage }}" alt="{{ post.data.title | decodeHtml }}">
          </a>
        </div>
        {%- endif %}

        <div class="post-header">
          <h3 class="post-title">
            <a href="{{ post.url }}">{{ post.data.title | decodeHtml }}</a>
          </h3>
        </div>

        <div class="post-info">
          <time datetime="{{ post.date | dateToISO }}">{{ post.date | readableDate }}</time>
          <div class="entry-summary">
            <p>{{ post.templateContent | excerpt | safe }}</p>
          </div>
        </div>

        <div class="post-footer">
          <small>
            <a href="{{ post.url }}">
              <span class="read-more">Read more</span>
            </a>
          </small>
        </div>
      </article>
      {%- endfor %}
    </div>
  </div>

  <aside class="sidebar">
    <div class="widget">
      <h4>Search</h4>
      <form action="/search/" method="get">
        <input type="text" name="q" placeholder="Search posts..." required>
        <button type="submit">üîç Search</button>
      </form>
    </div>

    <div class="widget">
      <h4>Follow Us</h4>
      <ul class="social-links">
        <li><a href="{{ site.social.facebook }}" target="_blank">Facebook</a></li>
        <li><a href="{{ site.social.twitter }}" target="_blank">Twitter</a></li>
        <li><a href="{{ site.social.linkedin }}" target="_blank">LinkedIn</a></li>
      </ul>
    </div>
  </aside>
</div>
