{#
  Reusable post card component
  Usage: {% include "post-card.njk" %}
  Expects: post variable in context
#}
<article class="post-card">
  {%- if post.data.metadata.media.ogImage %}
  <div class="post-image">
    <a href="{{ post.url }}">
      <img src="{{ post.data.metadata.media.ogImage }}" alt="{{ post.data.title | decodeHtml }}">
    </a>
  </div>
  {%- endif %}

  <div class="post-header">
    <h3 class="post-title">
      <a href="{{ post.url }}">{{ post.data.title | decodeHtml }}</a>
    </h3>
  </div>

  <div class="post-info">
    {%- if post.date %}
    <time datetime="{{ post.date | dateToISO }}">{{ post.date | readableDate }}</time>
    {%- endif %}
    <div class="entry-summary">
      {%- if post.data.description %}
      <p>{{ post.data.description }}</p>
      {%- elif post.data.metadata and post.data.metadata.summary %}
      <p>{{ post.data.metadata.summary }}</p>
      {%- elif post.templateContent %}
      <p>{{ post.templateContent | excerpt | safe }}</p>
      {%- endif %}
    </div>
  </div>

  <div class="post-footer">
    <small>
      <a href="{{ post.url }}">
        <span class="read-more">Read more</span>
      </a>
    </small>
  </div>
</article>
