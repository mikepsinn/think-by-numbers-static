---
layout: base.njk
title: All Tags
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - posts
permalink: /tag/{{ tag | slugify }}/
eleventyComputed:
  title: "Posts tagged '{{ tag }}'"
---

<div class="container" data-pagefind-ignore>
  <div class="main-content">
    <h1>{{ title }}</h1>
    <p>{{ collections[tag].length }} post{% if collections[tag].length != 1 %}s{% endif %} tagged with "{{ tag }}"</p>

    <div class="post-grid">
      {%- set sortedPosts = collections[tag] | sort(false, false, 'data.aiScores.composite') | reverse %}
      {%- for post in sortedPosts %}
      {%- if post.data.title %}
      {% include "post-card.njk" %}
      {%- endif %}
      {%- endfor %}
    </div>
  </div>

  <aside class="sidebar">
    <div class="widget">
      <h4>Search</h4>
      <form action="/search/" method="get">
        <input type="text" name="q" placeholder="Search posts..." required>
        <button type="submit">üîç Search</button>
      </form>
    </div>

    <div class="widget">
      <h4>All Tags</h4>
      <div class="tag-cloud">
        {%- for tagName in collections.all | getAllTags | sort %}
        {%- set tagUrl = ('/tag/' + tagName) | slugify %}
        <a href="{{ tagUrl }}/" class="tag-link{% if tagName == tag %} active{% endif %}">{{ tagName }}</a>
        {%- endfor %}
      </div>
    </div>

    <div class="widget">
      <h4>Follow Us</h4>
      <ul class="social-links">
        <li><a href="{{ site.social.facebook }}" target="_blank">Facebook</a></li>
        <li><a href="{{ site.social.twitter }}" target="_blank">Twitter</a></li>
        <li><a href="{{ site.social.linkedin }}" target="_blank">LinkedIn</a></li>
      </ul>
    </div>
  </aside>
</div>
